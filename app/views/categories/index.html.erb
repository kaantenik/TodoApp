<p style="color: green"><%= notice %></p>

<h1>Kategoriler</h1>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">
            <%= category.name %>
            <span class="badge bg-primary float-end">
              <%= category.tasks.count %> görev
            </span>
          </h5>
          <p class="card-text text-muted">
            <%= category.description.presence || "Açıklama yok" %>
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'Görevleri Gör', category, class: "btn btn-sm btn-outline-primary" %>
              <%= link_to 'Düzenle', edit_category_path(category), class: "btn btn-sm btn-outline-secondary" %>
            </div>
            <%= button_to 'Sil', category, method: :delete, 
                class: "btn btn-sm btn-outline-danger",
                data: { confirm: 'Bu kategoriyi silmek istediğinize emin misiniz? Bu işlem geri alınamaz.' } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to 'Yeni Kategori', new_category_path, class: "btn btn-primary" %>
</div>
